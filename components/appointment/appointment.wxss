/* components/appointment/appointment.wxss */
.wrap{
    width: 100%;
    height: 100%;
    overflow: hidden;
    background-color: rgba(0, 0, 0, 0.43);
    position: absolute;
    top: 0;
    left: 0;
    display: flex;
    justify-content: center;
    text-align: center;
    align-items: center;
    flex-direction: column;
}
.content_select{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.select{
    display: flex;
    align-items: center;
    text-align: center;
    line-height: 60px;
}
.textTip{
    font-size: 28rpx;
    font-family: PingFang SC;
    font-weight: 500;
    color: #131313;
    line-height: 24rpx;
    text-align: center;
    margin: 133rpx auto 0;
}
.cancel_select{
    width: 50%;
}
.select_appointment{
    border-right: 1px solid #facdd8;
    color: #ff3366;
    width: 50%;
}
.content_back{
    position: relative;
    width: 570rpx;
    height: 544rpx;
}
.line_mask{
    height: 1rpx;
    width: 427rpx;
    background-color: #D6D6D6;
    margin: 45rpx auto 0;
}
.confirm_only{
    width: 285rpx;
    height: 73rpx;
    line-height: 73rpx;
    background: #F44C70;
    box-shadow: 0px 6px 8px 5px rgba(244, 76, 112, 0.16);
    border-radius: 36rpx;
    margin: 50rpx auto;
    font-size: 30rpx;
    font-weight: bold;
    color: white;
    letter-spacing: 4rpx;
}
.close_icon{
    width: 50rpx;
    height: 50rpx;
    position: absolute;
    right: -25rpx;
    top: -25rpx;
}
.content_select .title_icon{
    width: 397rpx;
    height: 45rpx;
    margin: 116rpx auto 0;
}