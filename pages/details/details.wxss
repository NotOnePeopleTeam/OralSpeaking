/* pages/details/details.wxss */
.header{
    min-height: 226rpx;
    margin: 20rpx;
    padding: 15rpx;
    background: white;
}
.teacher_profile{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}
.teacher_avatar{
    width: 170rpx;
    height: 170rpx;
    overflow: hidden;
    border: 1px solid gray;
    border-radius: 8px;
}
.teacher_details{
    margin-left: 16rpx;
    width: 508rpx;
}
.teacher_name{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}
.name,.subject{
    color: #212121;
    line-height: 40rpx;
}
.teacher_name .name{
    font-size: 32rpx;
    padding: 17rpx 0;
}
.teacher_name .subject{
    font-size: 30rpx;
    font-weight: bold;
}
.lesson_tab{
    margin: 0 20rpx;
    background: white;
}
.tab_controller{
    line-height: 78rpx;
    background: #f5f5f5;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}
.tab_controller view{
    width: 50%;
    font-size: 30rpx;
    font-weight: bold;
    color: #666666;
    text-align: center;
}
.tab_controller view.now{
    background: white;
    color: #F44C70;
}
.list_item{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    margin: 0 13rpx;
    padding: 26rpx 0;
    border-bottom: 2rpx solid #e6e6e6;
}
.tab_content{
    padding-bottom: 26rpx;
}
text{
    margin: 0;
    padding: 0;
}
.profile_more{
    text-align: center;
}
.up_down{
    width: 20rpx;
    height: 16rpx;
    margin-left: 6rpx;
    margin-bottom: 4rpx;
}
.teacher{
    height: 80rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-line-clamp:  2;
    white-space: wrap;
    display:  -webkit-box;
    -webkit-box-orient: vertical;
}
.teacher text{
    color: #666666;
}
.teacher.more{
    height: auto;
    overflow: auto;
    display: block;
}