/* pages/mine/mine.wxss */
.lesson{
    display: flex;
    justify-content: space-between;
    margin: 5px 0 10px;
    background-color: white;
    align-items: center;
    line-height: 82rrpx;
    padding: 0 20px;
}
.user_proflie{
    display: flex;
    width: 710rpx;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding: 45rpx 0 45rpx 40rpx;
}
.avatar{
    width: 128rpx;
    height: 128rpx;
    border: 6rpx solid rgba(245, 245, 245, 0.7);
    overflow: hidden;
    border-radius: 200rpx;
}
.usernick{
    width: 54%;
}
.blod,.small{
    line-height: 20px;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    word-break: break-all;
    text-align: left;
}
.certification{
    width: 175rpx;
}
.blod{
    font-size: 36rpx;
    color: white;
    font-weight: bolder;
}
.small{
    font-size: 12px;
    color: white;
}
.apply{
    background-color: white;
    color: #ff3366;
    line-height: 20px;
    padding: 2px 6px;
    border-radius: 12px 0 0 12px;
}
.icon{
    display: flex;
    justify-content: left;
    width: 60%;
    line-height: 40px;
    align-items: center;
}
.icon image{
    width: 20px;
    height: 20px;
    margin-right: 10px;
}
.arrow{
    display: flex;
    justify-content: right;
    align-items: center;
}
.arrow image{
    width: 20px;
    height: 20px;
}
.attend_class{
    display: flex;
    justify-content: space-between;
    flex-direction: row;
    padding: 30rpx 120rpx;
    margin: 0 10px -98rpx;
    background-color: white;
    align-items: center;
    text-align: center;
    border-radius: 5px;
    height: 160rpx;
    box-shadow: 0px 3px 9px 2px rgba(30, 104, 234, 0.09);
}
.remaining{
    color: #ff3366;
}
.line{
    line-height: 40rpx;
}

.user_bg{
    position: relative;
    top: 0;
    left: 0;
    width: 100%;
    height: 300rpx;
}
.user_proflie_wrap{
    position: absolute;
    top: 0;
    left: 0;
}
.user_others{
    padding-top: 156rpx;
}
.bind_classin{
    width: 99rpx;
    height: 44rpx;
    background: #E9E9E9;
    border: 1rpx solid #B5B5B5;
    border-radius: 22rpx;
    text-align: center;
    line-height: 44rpx;
}